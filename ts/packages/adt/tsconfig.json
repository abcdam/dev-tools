{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "extends": ["@abcd/cfg/ts/base"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@option:core/*": ["./src/modules/option/core/*.js"],
      "@option:/*": ["./src/modules/option/*.js"],
      "@branch/*": ["./src/modules/branch/*.js"],
      "@branch:core/*": ["./src/modules/branch/core/*.js"],
      "@result:core/*": ["./src/modules/result/core/*.js"],
      "@internal/*": ["./src/internal/*.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
